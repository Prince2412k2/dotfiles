{
  "layer": "top",
  "position": "top",
  "height": 0,
  "modules-left": [
    "hyprland/workspaces"
  ],
  "modules-center": [
    "clock",
    "mpris"
  ],
  "modules-right": [
    "pulseaudio#output",
    "pulseaudio#input",
    "battery",
    "network",
    "memory",
    "custom/lock",
    "custom/bat"
  ],
  "hyprland/workspaces": {
